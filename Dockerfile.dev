# Dockerfile.dev for running the Next.js application in development mode in
# a Docker container with pnpm
# This Dockerfile is optimized for development with hot reloading and all dependencies
FROM node:20-alpine

WORKDIR /app

RUN apk add --no-cache libc6-compat

RUN corepack enable && corepack prepare pnpm@latest --activate

COPY package.json pnpm-lock.yaml ./

RUN pnpm install

# Copy everything from the current directory to the container
COPY . .

# Expose Next.js dev server port
EXPOSE 3000

# Start Next.js in development mode with hot reload
CMD ["pnpm", "dev"]